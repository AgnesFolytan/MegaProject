generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  email String  @unique
  password String
  type UserType
  token Token[]

  purchase Purchase[]
}


model Token {
  token String @id
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}

model Product {
  sku Int @id @unique
  name String
  description String
  price Decimal @db.Decimal(7, 2)
  discount Decimal? @db.Decimal(7, 2)
  yarn YarnTypes
  size Decimal @db.Decimal(7, 2)

  Purchase Purchase[]
}

model Purchase {
  id Int @id @default(autoincrement())

  username String
  user User @relation(fields: [username], references: [username], onDelete: Restrict, onUpdate: Cascade)

  products Product[]
}

enum YarnTypes {
  Acrylic
  Cotton
  Polyester
  Blended
  Chenille
  Velvet
  Wool
}


enum UserType {
  customer
  admin
  deleted
  restricted
}
